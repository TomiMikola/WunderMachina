# {{ ansible_managed }}
<VirtualHost *:{{ http_port }}>
  ServerAdmin {{ admin_mail }}
  ServerName {{ webserver_hostname }}
  ServerAlias {{ webserver_alias }}

  DocumentRoot {{ webserver_docroot }}

  <Directory {{ webserver_docroot }}>
    Options FollowSymLinks MultiViews
    AllowOverride All
    Order allow,deny
    allow from all
  </Directory>

  ErrorLog /var/log/httpd/{{ webserver_hostname }}-error.log

  LogLevel warn
  CustomLog /var/log/httpd/{{ webserver_hostname }}-access.log combined
</VirtualHost>
